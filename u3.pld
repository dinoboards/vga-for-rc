BD1 = (VIOREQ_RD & !VBLANK) # (VMREQ_RD & RD1); /* is 1 when in blanking period */
BD1.OE = BD_OUTPUT_EN;

BD2 = (VIOREQ_RD & 'b'0) # (VMREQ_RD & RD2);
BD2.OE = BD_OUTPUT_EN;

BD3 = (VIOREQ_RD & 'b'0) # (VMREQ_RD & RD3);
BD3.OE = BD_OUTPUT_EN;

BD4 =  (VIOREQ_RD & 'b'0) # (VMREQ_RD & RD4);
