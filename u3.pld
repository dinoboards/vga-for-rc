VMREQ_WR_DELAY.D = 'b'1;
VMREQ_WR_DELAY.CK = CLOCK;
VMREQ_WR_DELAY.AR = !VMREQ_WR;
VMREQ_WR_DELAY.AP = VMREQ_WR;

VMREQ_WR_DELAY2.D = 'b'1;
VMREQ_WR_DELAY2.CK = CLOCK;
VMREQ_WR_DELAY2.AR = !VMREQ_WR_DELAY;
VMREQ_WR_DELAY2.AP = VMREQ_WR_DELAY;

VMREQ_WR_DELAY3.D = 'b'1;
VMREQ_WR_DELAY3.CK = CLOCK;
VMREQ_WR_DELAY3.AR = !VMREQ_WR_DELAY2;
VMREQ_WR_DELAY3.AP = VMREQ_WR_DELAY2;

VMREQ_WR_n = !((VMREQ_WR_DELAY # VMREQ_WR_DELAY2) & !VMREQ_WR_DELAY3);

VMREQ_RD = !VMREQ_n & RD;
VMREQ_WR = !VMREQ_n & WR;
VMREQ = VMREQ_RD # VMREQ_WR;

VIOREQ_RD = VIOREQ & RD;
VIOREQ_WR = VIOREQ & WR;

LOW_RES.D = BD7;
LOW_RES.CK = VIOREQ_WR;

LINES_REDUCED.D = BD6;
