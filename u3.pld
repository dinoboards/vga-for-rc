BD5 = (VIOREQ_RD & 'b'0) # (VMREQ_RD & RD5);
BD5.OE = BD_OUTPUT_EN;

BD6 = (VIOREQ_RD & LINES_REDUCED) # (VMREQ_RD & RD6);
BD6.OE = BD_OUTPUT_EN;

BD7 = (VIOREQ_RD & LOW_RES) # (VMREQ_RD & RD7);
BD7.OE = BD_OUTPUT_EN;

